    "version": "0.2.0",
    "configurations": [
        {
            "name": "HHVM: Run Script",
            "type": "hhvm",
            "request": "launch",
            "script": "${file}"
        },
        {
            "name": "HHVM: Attach to Server",
            "type": "hhvm",
            "request": "attach",
            "host": "localhost",
            "port": 8999,
            "remoteSiteRoot": "${workspaceFolder}",
            "localWorkspaceRoot": "${workspaceFolder}"
        }
    ]
}